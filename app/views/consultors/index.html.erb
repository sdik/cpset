<div class="page-header">
  <h1>consultors cadastrados</h1>
</div>

<table class="table table-striped table-condensed">
  <tr>
    <th>Nome</th>
    <th>Telefone</th>
    <th>Email</th>
    <th></th>
 </tr>

<% @consultors.each do |consultor| %>
  <tr>
    <td><%= consultor.nome %></td>
    <td><%= consultor.telefone %></td>
    <td><%= consultor.email %></td>
    <td><%= link_to 'Editar', edit_consultor_path(consultor),:class => "btn btn-mini" %> <%= link_to 'Apagar', consultor, confirm: 'Desejas Apagar?', method: :delete ,:class => 'btn btn-mini btn-danger'%></td>
  </tr>
<% end %>
</table>

