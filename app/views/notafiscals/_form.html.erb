<%= form_for(@notafiscal, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @notafiscal.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h3><%= pluralize(@notafiscal.errors.count, "error") %> prohibited this notafiscal from being saved:</h3>
       <ul>
      <% @notafiscal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <fieldset>
  <div class="control-group">
    <%= f.label :numero,:class =>'control-label' %>
    <div class="controls">
    
    <%= f.text_field :numero %>
    </div>
    </div>
  <div class="control-group">
    <%= f.label :data,:class =>'control-label' %>
    <div class="controls">
    
    <%= f.date_select :data, :order => [:day, :month, :year], :use_month_names => %w(Janeiro Fevereiro Marco Abril Maio Junho Julho Agosto Setembro Outubro Novembro Dezembro)%>
    </div>
    </div>
  <div class="control-group">
    <%= f.label :cliente, :class =>'control-label' %>
    <div class="controls">
    
    <%= f.collection_select :cliente_id, Cliente.find(:all), :id, :nome %>
    </div>
    </div>
  <div class="control-group">
    <%= f.label :valor,:class =>'control-label' %>
    <div class="controls">
    
    <%= f.text_field :valor %>
    </div>
    </div>
  <div class="control-group">
    <%= f.label :status,:class =>'control-label' %>
    <div class="controls">
    
    <%= f.text_field :status %>
    </div>
    </div>
  <div class="control-group">
    <%= f.label :ok,:class =>'control-label' %>
    <div class="controls">
    
    <%= f.check_box :ok %>
    </div>
    </div>
<br/>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-small btn-primary' %>
    <%= link_to 'Voltar', notafiscals_path, :class=>'btn btn-small' %>
  </div>
</fieldset>
<% end %>

