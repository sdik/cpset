<div class="page-header">
  <h1>Notas Fiscais Cadastradas</h1>
</div>

<table class="table table-striped table-condensed">
  <tr>
    <th>Numero</th>
    <th>Data</th>
    <th>Cliente</th>
    <th>Valor</th>
    <th>Status</th>
    <th>Ok</th>
    <th></th>
 </tr>

<% @notafiscals.each do |notafiscal| %>
  <tr>
    <td><%= notafiscal.numero %></td>
    <td><%= notafiscal.data.strftime("%d/%m/%Y") %></td>
    <td><%= notafiscal.cliente.nome %></td>
    <td><%= notafiscal.valor %></td>
    <td><%= notafiscal.status %></td>
    <% if notafiscal.ok.to_s == 'true' %> 
      <td> <span class="badge badge-success">S</span> </td>
    <%else%>
     <td> <span class="badge badge-important">N</span> </td> 
    <%end%>
    <td><%= link_to 'Editar', edit_notafiscal_path(notafiscal),:class => "btn btn-mini" %> <%= link_to 'Apagar', notafiscal, confirm: 'Desejas Apagar?', method: :delete ,:class => 'btn btn-mini btn-danger'%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Adicionar Nota Fiscal', new_notafiscal_path, :class => "btn btn-small btn-primary" %>
