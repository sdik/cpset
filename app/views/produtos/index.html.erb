<div class="page-header">
  <h1>produtos cadastrados</h1>
</div>

<table class="table table-striped table-condensed">
  <tr>
    <th>Descricao</th>
    <th>Quantidade</th>
    <th>Compra</th>
    <th>Venda</th>
    <th>Minimo</th>
    <th>Fornecedor</th>
    <th></th>
 </tr>

<% @produtos.each do |produto| %>
  <tr>
    <td><%= produto.descricao %></td>
    <td><%= produto.quantidade %></td>
    <td><%= produto.compra %></td>
    <td><%= produto.venda %></td>
    <td><%= produto.minimo %></td>
    <td><%= produto.fornecedor %></td>
    <td><%= link_to 'Editar', edit_produto_path(produto),:class => "btn btn-mini" %> <%= link_to 'Apagar', produto, confirm: 'Desejas Apagar?', method: :delete ,:class => 'btn btn-mini btn-danger'%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Adicionar Produto', new_produto_path, :class => "btn btn-small btn-primary" %>
