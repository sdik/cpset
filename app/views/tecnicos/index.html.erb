<div class="page-header">
  <h1>tecnicos cadastrados</h1>
</div>

<table class="table table-striped table-condensed">
  <tr>
    <th>Nome</th>
    <th>Telefone</th>
    <th>Email</th>
    <th></th>
 </tr>

<% @tecnicos.each do |tecnico| %>
  <tr>
    <td><%= tecnico.nome %></td>
    <td><%= tecnico.telefone %></td>
    <td><%= tecnico.email %></td>
    <td><%= link_to 'Editar', edit_tecnico_path(tecnico),:class => "btn btn-mini" %> <%= link_to 'Apagar', tecnico, confirm: 'Desejas Apagar?', method: :delete ,:class => 'btn btn-mini btn-danger'%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Adicionar Tecnico', new_tecnico_path, :class => "btn btn-small btn-primary" %>
